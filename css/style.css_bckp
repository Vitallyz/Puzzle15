table {
    width: 60%;
    margin: auto;
}

td {
    width: 25%;
    position: relative;
    text-align: center; 
    vertical-align: middle;
}

td::before {
  content: '';
  display: block;
  margin-top: 100%;
}

td .content {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    background: gold;
}

td .value {
    /* position: relative; */

    color: black;
}

#cell_03 .content {
    background: red;
}